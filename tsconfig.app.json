{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "module": "esNext",
    "types": [],
    "paths": {
      "@src/*": [
        "src/*.web",
        "src/*"
      ],
      "@core/*": ["src/app/core/*"],
      "@pages/*": ["src/app/core/pages/*"],
      "@modules/*": ["src/app/modules/*"],
      "@shared/*": ["src/app/shared/*"]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ]
}
